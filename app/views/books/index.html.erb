<h1><strong>Books</strong></h1>

<table>
   <thead>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
   </thead>

   <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <span class="book-title">
            <%=  book.title  %>
          </span>
        </td>
        <td>
          <span class="book-body">
             <%= book.body  %>
          </span>
        </td>
        <td>
          <span>
             <%= link_to "Show", book_path(book.id) %>
          </span>
        </td>
        <td>
           <span>
             <%= link_to "Edit", edit_book_path(book.id) %>
           </span>
        </td>
        <td>
           <span>
              <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
          </span>
        </td>
     </tr>
    <% end %>
 </tbody>
</table>

